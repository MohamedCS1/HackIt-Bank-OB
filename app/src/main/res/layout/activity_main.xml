<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F1"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/bu_back"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/img_bu_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Dashboard"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginEnd="@dimen/_35sdp"
                android:layout_weight="1"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/img_first_upload_your_file"
            android:layout_marginStart="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_65sdp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/background_top_addfile"
            android:layout_margin="@dimen/_15sdp"
            >

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

                   <TextView
                       android:id="@+id/bu_new_upload"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="New upload"
                       android:clickable="true"
                       android:padding="@dimen/_8sdp"
                       android:textStyle="bold"/>
               <TextView
                   android:id="@+id/bu_recent"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="   Recent    "
                   android:clickable="true"
                   android:padding="@dimen/_8sdp"
                   android:textStyle="bold"/>
           </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="#EBEFF2"
                android:layout_marginTop="@dimen/_10sdp"
                />

            <ImageView
                android:id="@+id/bu_add_csv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:src="@drawable/background_add_new_csv"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:visibility="gone"/>
        </LinearLayout>


    </LinearLayout>

</ScrollView>